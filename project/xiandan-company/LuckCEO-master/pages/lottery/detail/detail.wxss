/* pages/lottery/detail/detail.wxss */

.cover-image_container {
  width: 100%;
  height: 420rpx;
  background: #fff;
}

.filter {
  filter: blur(6px);
}

.cover-image {
  width: 100%;
  height: 100%;
}

.gift-header {
  color: white;
  width: 100%;
  height: 136rpx;
  text-align: center;
  font-size: 42rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.btn-join_container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  display: -webkit-flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
}

.cell {
  position: relative;
  display: -webkit-flex;
  display: -webkit-box;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 20rpx 0rpx;
}

.btn-join {
  width: 250rpx;
  margin-top: 40rpx;
  margin-bottom: 54rpx;
  display: inline-block;
  height: 250rpx;
  font-size: 34rpx;
  color: white;
  font-weight: 600;
  text-align: center;
  border-radius: 50%;
  line-height: 250rpx;
  background: #d2483c;
  position: relative;
}

.btn-joined {
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  background: #dab0b0;
  color: #bc4343;
  border-radius: 50%;
  margin: 20rpx -6rpx;
  border: 4rpx solid white;
}

.btn-join-active {
  background: rgb(136, 63, 57);
}

button[disabled] {
  color: black;
  font-size: 34rpx;
  background: #a86c67;
}

button::after {
  border: none;
}

.weui-cell-nolines {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.show_gift {
  width: 686rpx;
  padding-bottom: 20rpx;
  background: #fff;
  position: absolute;
  display: flex;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  animation-name: show_animation;
  animation-duration: 0.3s;
  flex-direction: column;
  align-items: center;
  display: -webkit-flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  border-radius: 30rpx;
}

.gift-btn {
  width: 60%;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
  color: white;
  border-radius: 60rpx;
}

.show_close {
  position: absolute;
  font-size: 64rpx;
  top: 0;
  right: 0;
}

.bottom-btn {
  border: none !important;
  color: white !important;
  border-radius: 0;
  width: 50%;
}

.los-lot {
  width: 90%;
  height: 164rpx;
  background: #999;
  margin: 20rpx auto;
  text-align: center;
  font-size: 30rpx;
  color: white;
}

@keyframes show_animation {
  0% {
    top: 100%;
  }

  100% {
    top: 50%;
  }
}
