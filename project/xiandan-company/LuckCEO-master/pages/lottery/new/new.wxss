/* pages/activity/new/new.wxss */

.cover-image_container {
  width: 100%;
  height: 376rpx;
  background: #fff;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.box-add {
  position: relative;
  width: 686rpx;
  height: 88rpx;
  margin: 32rpx 32rpx 0rpx 32rpx;
  text-align: center;
  line-height: 88rpx;
  border: 2rpx solid #555;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

