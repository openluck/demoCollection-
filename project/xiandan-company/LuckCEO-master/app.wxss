/**app.wxss**/
@import 'style/weui.wxss';
@import 'iconfont.wxss';

page {
  background-color: #EEEEEE;
  width: 100%;
  height: 100%;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  padding-bottom: 20rpx;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.container {
  height: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.center_container {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.weui-cells__right_title {
  position: absolute;
  right: 20rpx;
  color: #0000a1;
}

.color-red {
  color: #d2483c;
}

.text-align_center {
  text-align: center;
}

.text_bold {
  font-weight: bold;
}

.line {
  border-top: 1rpx solid #D9D9D9;
}

.line-bottom {
  border-bottom: 1rpx solid #D9D9D9;
}

.button_clear {
  background: transparent;
  border: none
}

button[class="button_clear"]::after {
  border: 0;
}

.share {
  background: rgba(122, 122, 122, 0.8);
  position: fixed;
  height: 100%;
  width: 100%;
  bottom: 0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding: 0rpx 20rpx;
}

.share button {
  width: 60%;
  margin: 20rpx auto;
}

.red_packet_container {
  position: fixed;
  bottom: 60rpx;
  left: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  display: -webkit-flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  animation: shake 5s infinite cubic-bezier(0.36, 0.07, 0.19, 0.97) both;
}

@keyframes shake {

  2%,
  18% {
    transform: translate3d(-1px, 0, 0);
  }

  4%,
  16% {
    transform: translate3d(2px, 0, 0);
  }

  6%,
  10%,
  14% {
    transform: translate3d(-4px, 0, 0);
  }

  8%,
  12% {
    transform: translate3d(4px, 0, 0);
  }

  100% {
    transform: translate3d(0, 0, 0);
  }
}