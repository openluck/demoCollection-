/* pages/tutorial/tutorial.wxss */

.scroll {
  overflow: auto;
}

.process-contains {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  margin-top: 32px;
  justify-content: center;
}

.process {
  width: 11px;
  height: 11px;
  border-radius: 11px;
  margin-left: 7px;
  line-height: 20px;
  background-color: rgba(191, 191, 191, 1);
  text-align: center;
  border: 1px solid rgba(191, 191, 191, 1);
}

.process.ing {
  width: 21px;
  height: 21px;
  line-height: 20px;
  text-align: center;
  background-color: white;
  border: 1px solid rgba(4, 202, 19, 1);
}

.process.done {
  width: 11px;
  height: 11px;
  margin-left: 7px;
  line-height: 20px;
  background-color: #04CA13;
  text-align: center;
  border: 1px solid #04CA13;
}

.video {
  margin: 20rpx;
  width: 308px;
  height: 411px;
  border-radius: 20rpx;
}

.video-cover {
  margin: 20rpx;
  width: 308px;
  height: 411px;
  border-radius: 10rpx;
}

.word-contains {
  margin-top: 23px;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}


.word-prev {
  /* display: none; */
  line-height: 100%;
  width: 124rpx;
  font-size: 96rpx;
  vertical-align: middle;
  text-align: center;
  color: rgb(208, 208, 208);
}

.word-next {
  line-height: 100%;
  width: 124rpx;
  font-size: 96rpx;
  vertical-align: middle;
  text-align: center;
  color: rgb(208, 208, 208);
}

.none {
  flex-grow: 1;
}

.sample {
  /* float: left; */
  width: 70px;
  height: 70px;
  background-image: url(data:image/svg+xml;base64,);
  line-height: 70px;
  font-size: 30px;
  background-size: cover;
  color: rgba(16, 16, 16, 1);
  text-align: center;
  font-family: 方正楷体-标准;
}

.btn-submit {
  width: 164px;
  height: 45px;
  padding: 0;
  line-height: 45px;
  margin-top: 28px;
  border-radius: 4px;
  background-color: rgba(246, 247, 177, 0.98);
  color: rgba(16, 16, 16, 1);
  font-size: 16px;
  text-align: center;
  font-family: PingFang SC;
  border: 1px solid rgba(210, 161, 81, 1);
}

.assignment {
  width: 100%;
  margin-top: 10px;
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
}

.assignment-info {
  display: flex;
  width: 100%;
  flex-direction: row;
}

.assignment-head {
  width: 35px;
  height: 35px;
  margin-left: 10px;
  border-radius: 35px;
}

.assignment-name {
  height: 24px;
  line-height: 24px;
  color: rgba(16, 16, 16, 1);
  font-size: 16px;
  text-align: left;
  margin-left: 7px;
  font-family: SourceHanSansSC-regular;
}

.assignment-date {
  height: 24px;
  line-height: 24px;
  color: rgba(166, 166, 166, 1);
  font-size: 14px;
  text-align: left;
  margin-left: 7px;
  font-family: PingFangSC-regular;
}

.assignment-picture {
  width: 154px;
  height: 273px;
  margin-left: 50px;
  /* height: auto; */
  margin-top: 2px;
  border-radius: 10px;
}

.no-open-image {
  width: 750rpx;
  height: 750rpx;
}

.no-paid-image {
  width: 750rpx;
  height: 750rpx;
}